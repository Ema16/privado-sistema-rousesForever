@model InventarioRForever.Models.Color

@{
    Layout = null;
}

<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalle del color </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <ol class="breadcrumb">
                    <li><a href="#" class="close" data-dismiss="modal">Detalle</a></li>
                    <li class="active">Detalle del color : <strong>@(Model.NombreColor)</strong></li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading">Datos del color</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Nombre Color</dt>
                            <dd>@Model.NombreColor</dd>
                        </dl>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Productos con el color: @Model.NombreColor</div>
                    <div class="panel-body">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Nombre Producto</th>
                                    <th scope="col">Estado Producto</th>
                                    <th scope="col">Precio Compra</th>
                                    <th scope="col">Precio venta</th>
                                    <th scope="col">Cantidad en Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int cont = 1;
                                    @foreach (var item in Model.Productos)
                                    {
                                        <tr>
                                            <th scope="row">@cont</th>
                                            <td>@item.NombreProducto</td>
                                            <td>@item.EstadoProducto</td>
                                            <td>@item.PrecioCompra</td>
                                            <td>@item.PrecioVenta</td>
                                            <td>@item.CodInventarioNavigation.Stock</td>
                                        </tr>
                                        cont++;
                                    }
                                }
                            </tbody>
                        </table>


                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>

        </div>

    </div>
</div>
