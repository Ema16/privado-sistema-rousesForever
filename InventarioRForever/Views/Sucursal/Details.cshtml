@model InventarioRForever.Models.Sucursal

@{
    ViewData["Title"] = "Details";
    Layout = null;
}



<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalle de la sucursal @Model.NombreSucursal </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <ol class="breadcrumb">
                    <li><a href="#" class="close" data-dismiss="modal">Detalle Sucursal</a></li>
                    <li class="active">Detalle de la sucursal: <strong>@(Model.NombreSucursal)</strong> con dirección en: <strong>@(Model.Direccion)</strong></li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading">Datos de la sucursal</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Nombre Sucursal</dt>
                            <dd>@Model.NombreSucursal</dd>
                            <dt>Telefono</dt>
                            <dd>@Model.Telefono</dd>
                        </dl>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Informacion del Contacto</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Dirección</dt>
                            <dd>@Model.Direccion</dd>
                            <dt>Municipio</dt>
                            <dd>@Model.Municipio</dd>
                            <dt>Departamento</dt>
                            <dd>@Model.Departamento</dd>
                            <dt>Telefono</dt>
                            <dd>@Model.Telefono</dd>
                        </dl>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">Observaciones</div>
                    <div class="panel-body">
                        <p>@Model.Observacion</p>
                    </div>
                </div>

            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
           

        </div>

    </div>
</div>

