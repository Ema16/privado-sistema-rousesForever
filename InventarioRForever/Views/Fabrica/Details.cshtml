@model InventarioRForever.Models.Fabrica

@{
    Layout = null;
}


<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalle de la Fabrica </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <ol class="breadcrumb">
                    <li><a href="#" class="close" data-dismiss="modal">Detalle</a></li>
                    <li class="active">Detalles de la fabrica : <strong>@(Model.NombreFabrica)</strong></li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading">Datos de la fabrica</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Datos de la fabrica</dt>
                            <dd>@Model.NombreFabrica</dd>
                            <dt>Telefono</dt>
                            <dd>@Model.Telefono</dd>
                            <dt>Dirección</dt>
                            <dd>@Model.Direccion</dd>
                        </dl>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Ordenes des fabricación en la fabrica</div>
                    <div class="panel-body">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Fecha de orden de fabricación</th>
                                    <th scope="col">Estado de fabricación</th>
                                    <th scope="col">Estado de ingreso en inventario</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Producto</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int cont = 1;
                                    @foreach (var item in Model.OrdenFabricacions)
                                    {
                                        <tr>
                                            <th scope="row">@cont</th>
                                            <td>@item.FechaFabricacion</td>
                                            <td>@item.EstadoFabricacion</td>
                                            <td>@item.EstadoIngresoInventario</td>
                                            <td>@item.CantidadFabricacion</td>
                                            <td>@item.CodProductoNavigation.NombreProducto</td>
                                        </tr>
                                        cont++;
                                    }
                                }
                            </tbody>
                        </table>


                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>

        </div>

    </div>
</div>

