@model InventarioRForever.Models.RecepcionMercancium

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalle de la recepción de mercancía </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <ol class="breadcrumb">
                    <li><a href="#" class="close" data-dismiss="modal">Detalle Entrada Mercancía</a></li>
                    <li class="active">Entrada de mercancía con fecha: <strong>@(Model.CantidadProducida)</strong> del material : <strong>@(Model.CodMaterialNavigation.NombreMaterial)</strong></li>
                </ol>

                <div class="panel panel-default">
                    <div class="panel-heading">Datos de la entrada de mercancia</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Material</dt>
                            <dd>@Model.CodMaterialNavigation.NombreMaterial</dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>Fecha entrada</dt>
                            <dd>@Model.CantidadProducida</dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>Cantidad recibida</dt>
                            <dd>@Model.Cantidad</dd>
                        </dl>
                        <dl class="dl-horizontal">
                            <dt>Stock Material</dt>
                            <dd>@Model.CodMaterialNavigation.CodInventarioNavigation.Stock</dd>
                        </dl>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Informacion del Proveedor</div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt>Nombre Proveedor</dt>
                            <dd>@Model.CodProveedorNavigation.Nombre</dd>
                            <dt>Direccion Proveedor</dt>
                            <dd>@Model.CodProveedorNavigation.Direccion</dd>
                            <dt>Telefono Proveedor</dt>
                            <dd>@Model.CodProveedorNavigation.Telefono</dd>
                        </dl>
                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>


        </div>

    </div>
</div>

